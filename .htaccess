# /fra-schedule/.htaccess

#//Prevent viewing of .htaccess file
<Files .htaccess>
order allow,deny
deny from all
</Files>

#//Prevent directory listings
Options All -Indexes

ErrorDocument 403 /error.php
ErrorDocument 404 /error.php
ErrorDocument 500 /error.php

<IfModule mod_rewrite.c>
RewriteEngine On

# This checks to make sure the connection is not already HTTPS
RewriteCond %{HTTPS} off
# This rule will redirect users from their original location
# to the same location but using HTTPS.
RewriteRule ^/?(.*) https://%{SERVER_NAME}/$1 [R,L]

RewriteRule applics.fraport.de/(.*) www.frankfurt-airport.com/$1
RewriteCond %{QUERY_STRING} req=register.*ip=(.*)$
RewriteRule .* - [E=HTTP_X_REAL_IP:%1]
</IfModule>
